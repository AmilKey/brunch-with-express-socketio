extends layout

include mixins/packages

block head
  link(rel='stylesheet', href='stylesheets/app.css')
  //if IE 7
      link(rel='stylesheet', href='stylesheets/font-awesome-ie7.min.css')
  script(src='javascripts/head.min.js')

block content
  .container
    .row.well
      .span12
        a.brand(href="https://github.com/AmilKey/brunch-with-express-socketio", target="_blank")        
          h1= title
          small= version
    .row
      .span12
        .hero-unit.well
          p Welcome to Brunch with Express and Socket.IO and Jade
          p: small <i class="icon-thumbs-up"></i> Based on 
            p: a(href="https://github.com/denya133/brunch-with-ember-and-express", target="_blank") Brunch with Ember and Express
            p: a(href="https://github.com/jerfowler/ExpressBrunchJade", target="_blank") Express Brunch with Jade
          p: a(class="btn btn-primary btn-large", href="https://github.com/AmilKey/brunch-with-express-socketio", target="_blank") Learn more
    - while (packages.length>0) {
        mixin packages(packages.splice(0, 3))
    - }
    hr
    footer
      p Â© Company 2014

    
